<section class="section">
    <div class="container">
        <main class="menu">
            <h2 class="visually-hidden"></h2>
            <div class="menu__categories">
                {% for item in args.switch %}
                    <button class="menu__categories-button button button--{{ item.selected }}">{{ item.categories }}</button>
                {% endfor %}
            </div>
            <ul class="menu__list">
                {% for item in args.items %}
                    <li class="menu__item menu__item--{{ item.type }}">
                        <img src="{{ item.camelCase }}" alt="{{ item.alt }}"
                             class="menu__item-logo">
                        <div class="menu__item-description">
                            <p class="menu__item-text">{{ item.place }}</p>
                            <h3 class="menu__item-title">{{ item.event }}</h3>
                            <time datetime="{{ item.datetime }}" class="menu__item-date">{{ item.date }}</time>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </main>
    </div>
</section>