<section class="section">
    <div class="container">
        <main class="cards">
            <h2 class="visually-hidden"></h2>
            <div class="cards__categories">
                {% for item in args.switch %}
                    <button class="cards__categories-button button button--{{ item.selected }}">{{ item.categories }}</button>
                {% endfor %}
            </div>
            <ul class="cards__list">
                {% for item in args.items %}
                    <li class="cards__item cards__item--{{ item.type }}">
                        <img src="{{ item.camelCase }}" alt="{{ item.alt }}"
                             class="cards__item-logo">
                        <div class="cards__item-description">
                            <p class="cards__item-text">{{ item.place }}</p>
                            <h3 class="cards__item-title">{{ item.event }}</h3>
                            <time datetime="{{ item.datetime }}" class="cards__item-date">{{ item.date }}</time>
                            <div class="cards__item-icon">
                                <svg class="el-icon">
                                    <use xmlns:xlink="http://www.w3.org/1999/xlink"
                                         xlink:href="{{ item.typeIcon }}"></use>
                                </svg>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </main>
    </div>
</section>