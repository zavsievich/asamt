{% if not args %}
    {% set args = {
        'avatar': '../../images/img/ava.png',
        'button': 'Go!',
        'name' : 'Robert Singer',
        'nav' :
        [
            {
                'icon': '#drop',
                'link': '#',
                'title':'Oslo, Norway',
            },
            {
                'icon' : '#union',
                'link' : '#',
                'title': '61 km'
            },
            {
                'icon' : '#cubes',
                'link' : '#',
                'title': 'Categories'
            },
            {
                'icon' : '#date',
                'link' : '#',
                'title' : 'June 4, 2018'
            }
        ],
        'buttonNav' : 'Reset',
    } %}
{% endif %}

<header class="header">
    <div class="container">
        <div class="header-banner">
            <h1 class="header-banner__logo">
                <a href="/">
                    <svg class="el-icon">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#logo"></use>
                    </svg>
                    <span class="visually-hidden"></span>
                </a>
            </h1>
            <div class="header-banner__search">
                <form action="" class="header-banner__search" method="get">
                    <input type="search" class="header-banner__search-input" id="search"
                           name="search" placeholder="I'm looking for...">
                    <button class="header-banner__search-btn" type="submit">{{ args.button }}</button>
                    <label for="search" class="header-banner__search-label">
                        <svg class="el-icon">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#search"></use>
                        </svg>
                    </label>
                </form>
            </div>
            <div class="header-banner__user">
                <div class="header__user-avatar"><img src="{{ args.avatar }}" alt="avatar"></div>
                <button class="header__user-name">{{ args.name }}</button>
            </div>
        </div>
    </div>
    <nav class="header__nav">
        <div class="header__nav-wrap container">

            <ul class="header__nav-list">
                {% for item in args.nav %}
                    <li>
                        <svg class="el-icon">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="{{ item.icon }}"></use>
                        </svg>
                        <a href="{{ item.link }}">{{ item.title }}</a>
                    </li>
                {% endfor %}
            </ul>
            <button class="header__nav-button">{{ args.buttonNav }}</button>
        </div>
    </nav>
</header>