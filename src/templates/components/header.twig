{% if not args %}
    {% set args = {
        avatar: '../../images/img/ava.png',
        button: 'Go!',
        name : 'Robert Singer',
        nav:
        [
            {
                icon: '#drop',
                link: '#',
                title:'Oslo, Norway',
            },
            {
                icon : '#union',
                link : '#',
                title: '61 km'
            },
            {
                icon : '#cubes',
                link : '#',
                title: 'Categories'
            },
            {
                icon : '#date',
                link : '#',
                title : 'June 4, 2018'
            }
        ],
        buttonNav : 'Reset',
    } %}
{% endif %}

<header class="header">
    <div class="header-banner">
        <h1 class="header-banner__logo">
            <a href="/">
                <svg class="el-icon">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#logo"></use>
                </svg>
                <span class="visually-hidden">Asamt</span>
            </a>
        </h1>
        <div class="header-banner__search">
            <form class="header-banner__search" method="get">
                <label for="search" class="header-banner__search-label">
                    <input type="search" class="header-banner__search-input" id="search"
                           name="search" placeholder="I'm looking for...">
                    <button class="header-banner__search-btn" type="submit">{{ args.button }}</button>
                </label>
            </form>
        </div>
        <div class="header-banner__user">
            <div class="header__user-avatar"><img src="{{ args.avatar }}" alt="avatar"></div>
            <button class="user-button">{{ args.name }}</button>
        </div>
    </div>
    <div class="header__basis">
        <nav class="header__nav">
            <ul class="header__nav-list">
                {% for item in args.nav %}
                    <li class="header__nav-item">
                        <button class="header__nav-item--btn" href="{{ item.link }}">
                            <svg class="el-icon">
                                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="{{ item.icon }}"></use>
                            </svg>
                            <span class="header__nav-item--title">{{ item.title }}</span>
                        </button>
                    </li>
                {% endfor %}
            </ul>
        </nav>
        <div class="header__basis-reset">
            <button class="header__basis-btn" type="button">{{ args.buttonNav }}</button>
        </div>
    </div>
</header>
