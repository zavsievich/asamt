{% if not args %}
    {% set args = {
        'avatar': '../../images/img/ava.png',
        'button': 'Go!',
        'name' : 'Robert Singer',
        'nav' :
        [
            {
                'icon': '#drop',
                'link': '#',
                'title':'Oslo, Norway',
            }
        ]
    } %}
{% endif %}

<header class="header">
    <div class="container">
        <div class="header-banner">
            <div class="header-banner__logo">
                <svg class="el-icon">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#logo"></use>
                </svg>
            </div>
            <div class="header-banner__search-wrap">
                <form action="" class="header-banner__search" method="get">
                    <input type="search" class="header-banner__search-input" id="search"
                           name="search" placeholder="I'm looking for...">
                    <button class="header-banner__search-btn" type="submit">{{ args.button }}</button>
                    <label for="search" class="header-banner__search-label"></label>
                </form>
            </div>
            <div class="header-banner__user">
                <div class="header__user-avatar"><img src="{{ args.avatar }}" alt="avatar"></div>
                <a class="header__user-name">{{ args.name }}</a>
            </div>
        </div>
    </div>
    <nav class="header__nav">
        <div class="container">
            <ul class="header__nav-list">
                {% for item in args.nav %}
                    <li>
                        <svg class="el-icon">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="{{ item.icon }}"></use>
                        </svg>
                        <a href="{{ item.link }}">{{ item.title }}</a>
                    </li>
                {% endfor %}
            </ul>
            <button class="reset"></button>
        </div>
    </nav>
</header>